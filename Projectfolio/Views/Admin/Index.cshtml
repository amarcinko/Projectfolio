@model IEnumerable<Projectfolio.Models.Category>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New Category", "Create") |
    @Html.ActionLink("Add administrator", "RoleAddToUser")
</p>
<div class="row">
    <div class="col-sm-6">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CategoryName)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoryName)
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>
        </div>
    <div class="col-sm-6">
        <table class="table">
            <tr>
                <th>
                    Administrators
                </th>
            </tr>

            @foreach (var item in ViewBag.Administrators)
            {
                <tr>
                    <td>
                    @item.UserName
                        </td>
                </tr>
            }
        </table>
    </div>
    </div>